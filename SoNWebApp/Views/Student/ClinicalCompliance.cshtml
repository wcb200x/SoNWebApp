@using SoNWebApp.Models.ViewModels



@model IEnumerable<StudentCCIndexViewModel>


    @{
        ViewBag.Title = "Clinical Compliance - ";
}
@{
    Layout = "~/Views/Shared/StudentLayoutPage.cshtml";
}

        <div class="panel-danger" style="border:1px solid #808080;">
            <div class="panel-heading">
                <h3 style="color:#FFFFFF; text-align: center;">Clinical Compliance Dashboard</h3>
            </div>
            <div class="panel-body">
                <div class="btn btn-default" style="background-color: #AD0000;  font-size: medium; border-color: #AD0000;"><a href="/Student/UploadDocuments"><font color="white">Upload Document</font></a></div>
                <div class="btn btn-default" style="background-color: #AD0000;  font-size: medium; border-color: #AD0000;"><a href="/Student/ViewDocuments"><font color="white">View Documents</font></a></div>
                    <div class="col-md-12">
                                    <table class="table">
                                        <tr>

                                            <th>
                                                @Html.DisplayNameFor(model => model.StudentNumber)
                                            </th>
                                           
                                            <th>
                                                @Html.DisplayNameFor(model => model.Name)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.ExpirationDate)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.IsExpired)
                                            </th>
                                            <th>
                                                Document
                                            </th>
                                            <th></th>
                                        </tr>

                                        @foreach (var item in Model)
                                        { 
                                            <tr>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.StudentNumber)
                                                </td>
                                               
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ExpirationDate)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.IsExpired)
                                                </td>
                                                <td>
                                                   @Html.ActionLink("Download Document", "GetDocument", "Student", new { documentId = item.DocumentID }, new { @class = "btn btn-primary", @style = "background-color: #AD0000; border-color: #AD0000;" })
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Edit", "Edit", "Compliance", new { id = item.ID }, false) |
                                                    @Html.ActionLink("Details", "Details", "Compliance", new { id = item.ID }, false)
                                                </td>
                                            </tr>
                                        }

                                    </table>
                                </div>
                        </div>
                    </div>

       