@model IEnumerable<SoNWebApp.Models.Student>

@{
    Layout = "~/Views/Shared/AdvisorLayoutPage.cshtml";
}


<div class="row">
    <div class="panel panel-danger">
        <div class="panel-heading stureport-panel" style="color:white;padding-top: 25px; padding-bottom:25px; ">
            <h2 style="text-align:center;">Students in Program</h2>
        </div>

        <div class="panel-body">

            <table class="table" style="color: #000000; ">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.StudentNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MiddleName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GPA)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Program)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Campus)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Petition)
                    </th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelitem => item.StudentNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.MiddleName)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.GPA)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Program.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Campus.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Petition)
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
