@model IEnumerable<SoNWebApp.Models.Compliance>

@{
    ViewBag.Title = "Compliance Index - ";
}
<div class="panel panel-danger" style="border:1px solid #808080;">
    <div class="panel-heading">
        <h3 style="color:#FFFFFF; text-align: center;">Compliances Index</h3>
    </div>
    <div class="panel-body">

        <button class="btn btn-primary col-md-2 pull-left" style="background:#AD0000; margin-bottom: 5px;" onclick="location.href='@Url.Action("Create", "Compliance")'">Create New</button>
        <div class="row" style="margin-left:685px;">
            @using (Html.BeginForm())
            {
                <p>
                    Search by name or number: @Html.TextBox("searchString")
                    <input type="submit" value="Search" />
                </p>
            }
        </div>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Document.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Student.StudentNumber)
                </th>
                <th>
                    @Html.ActionLink("Last Name", "Index","Compliance", new { sortOrder = ViewBag.NameSortParm },false)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Student.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ExpirationDate)
                </th>
                <th>
                    @Html.ActionLink("IsExpired", "Index", "Compliance", new { sortOrder = ViewBag.IsExpiredSortParm }, false)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Document.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Student.StudentNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Student.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Student.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpirationDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsExpired)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </td>
                </tr>
            }

        </table>
        </div>
    </div>

