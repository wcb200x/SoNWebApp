@using SoNWebApp.Models.ViewModels



@model IEnumerable<AdvisorCCIndexViewModel>


@{
    ViewBag.Title = "Compliance Index - ";
}
<div class="panel panel-danger" style="border:1px solid #808080;">
    <div class="panel-heading">
        <h3 style="color:#FFFFFF; text-align: center;">Compliances Index</h3>
    </div>
    <div class="panel-body">

        <button class="btn btn-primary col-md-2 pull-left" style="background:#AD0000; " onclick="location.href='@Url.Action("Create", "Compliance")'">Create New</button>
        <button class="btn btn-primary col-md-2 pull-left" style="background:#AD0000; margin-left: 5px;" onclick="location.href='@Url.Action("ViewDocuments", "Advisor")'">View Documents</button>

        <div class="row" style="margin-left:685px;">
            @using (Html.BeginForm())
            {
                <p>
                    Search by name or number: @Html.TextBox("searchString")
                    <input type="submit" value="Search" />
                </p>
            }
        </div>
        <table class="table">
            <tr>
            
                <th>
                Student ID
                </th>
                <th>
                    Last Name
                </th>
                <th>
                First Name
                </th>
                <th>
                    Compliance Name
                </th>
                <th>
                   Expiration Date
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsExpired)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsCompliant)
                </th>
                <th>
                    Document
                </th>
                               
               <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                  
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpirationDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsExpired)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsCompliant)
                    </td>
                    <td>
                        @Html.ActionLink("Download Document", "AdvisorGetDocument", "Student", new { documentId = item.DocumentID }, new { @class = "btn btn-primary", @style = "background-color: #AD0000; border-color: #AD0000;" })
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </td>
                </tr>
            }

        </table>
        </div>
    </div>

