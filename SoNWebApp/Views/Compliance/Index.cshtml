@using SoNWebApp.Models.ViewModels



@model IEnumerable<AdvisorCCIndexViewModel>


@{
    ViewBag.Title = "Compliance Index - ";
}
<div class="panel panel-danger" style="border:1px solid #808080;">
    <div class="panel-heading">
        <h3 style="color:#FFFFFF; text-align: center;">Compliances Index</h3>
    </div>
    <div class="panel-body">

        <button class="btn btn-primary col-md-2 pull-left" style="background:#AD0000; margin-bottom: 5px;" onclick="location.href='@Url.Action("Create", "Compliance")'">Create New</button>
        <div class="row" style="margin-left:685px;">
            @using (Html.BeginForm())
            {
                <p>
                    Search by name or number: @Html.TextBox("searchString")
                    <input type="submit" value="Search" />
                </p>
            }
        </div>
        <table class="table">
            <tr>
            
                <th>
                    @Html.DisplayNameFor(model => model.StudentNumber)
                </th>
                <th>
                    @Html.ActionLink("Last Name", "Index","Compliance", new { sortOrder = ViewBag.NameSortParm },false)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ExpirationDate)
                </th>
                <th>
                    @Html.ActionLink("IsExpired", "Index", "Compliance", new { sortOrder = ViewBag.IsExpiredSortParm }, false)
                </th>
                <th>
                    @Html.ActionLink("IsCompliant", "Index", "Compliance", new { sortOrder = ViewBag.IsCompliantSortParm }, false)
                </th>
                <th>
                    Document
                </th>
                               
               <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                  
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpirationDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsExpired)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsCompliant)
                    </td>
                    <td>
                        @Html.ActionLink("Download Document", "AdvisorGetDocument", "Student", new { documentId = item.DocumentID }, new { @class = "btn btn-primary", @style = "background-color: #AD0000; border-color: #AD0000;" })
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </td>
                </tr>
            }

        </table>
        </div>
    </div>

