        {
            <div>
                @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
        @if (User.IsInRole("Student"))
        {
            <div>
                @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
                @Html.ActionLink("Back to Compliance", "ClinicalCompliance", "Student", false, false)
            </div>
        }
