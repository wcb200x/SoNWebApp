        <h3 style="color:#FFFFFF;">Compliance Details</h3>
    </div>
    <div class="panel-body">
        <div>

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Document.DocumentType)
