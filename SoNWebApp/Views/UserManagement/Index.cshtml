
@{
    ViewBag.Title = "User Roles Index - ";
    Layout = "~/Views/Shared/AdvisorLayoutPage.cshtml";
}
@model List<SoNWebApp.Models.ViewModels.SelectUserRolesViewModel>


<div class="row">
    <div class="panel panel-danger">

    <div class="panel-heading">
    <h3 style="color:#FFFFFF; text-align:center;">Manage Users</h3>
        </div>
        <div class="panel-body">
            <div class="row" style="margin-left:675px;">

                @using (Html.BeginForm())
            {
                    <p>
                        Search by email: @Html.TextBox("searchString1")
                        <input type="submit" value="Search" />
                    </p>
                }
            </div>
            <hr />
            <div class="row">
                <div class="col-md-4"><b>User Name</b></div>
                <div class="col-md-4"><b>Roles</b></div>
            </div>
           
@{ var list = Model.ToList();
    for (int i = 0; i < list.Count; i++)
    {
       
            <div class="row">
                <div class="col-md-4">@Html.DisplayFor(modelItem => list[i].UserName)</div>
                <div class="col-md-4">
                    @foreach (var role in list[i].Roles)
                    {
                        <p>@role.RoleName</p>

                    }
                </div>

                <div class="col-md-4">
                    <a href="@Url.Action("Edit", "UserManagement", new {@id = list[i].Id})">Edit</a> |
                    <a href="@Url.Action("Delete", "UserManagement", new {@id = list[i].Id})">Delete</a> 
                </div>
            </div>
    }
}

<br />
<br />
<br />
</div>
</div>
</div>